CREATE DATABASE electronics_retailer;
USE electronics_retailer;

CREATE TABLE parts(
id INT AUTO_INCREMENT,
name VARCHAR(80) ,
price FLOAT,
currency VARCHAR(3),
PRIMARY KEY(id)
)Engine = InnoDB;

CREATE TABLE repaired_device(
id INT AUTO_INCREMENT ,
name VARCHAR(80),
status_report VARCHAR(120),
additional_information VARCHAR(120),
PRIMARY KEY(id)
)Engine = InnoDB;

CREATE TABLE retail_order(
id INT AUTO_INCREMENT,
part_id INT,
device_id INT,
PRIMARY KEY (id),
FOREIGN KEY (part_id) REFERENCES parts(id),
FOREIGN KEY (device_id) REFERENCES repaired_device(id)
)Engine = InnoDB;

CREATE TABLE employee ( 
id INT AUTO_INCREMENT,
name VARCHAR(80),
PRIMARY KEY (id)
)ENGINE = InnoDB;

CREATE TABLE customer (
id INT AUTO_INCREMENT,
name VARCHAR(80),
phone INT ,
billing_information VARCHAR(30),
PRIMARY KEY (id)
)ENGINE = InnoDB;

CREATE TABLE receipt(
order_id INT,
customer_id INT,
FOREIGN KEY (order_id) REFERENCES retail_order(id),
FOREIGN KEY (customer_id)REFERENCES customer(id)
)Engine = InnoDB;




CREATE TABLE employee_form(
order_id INT,
employee_id INT,
FOREIGN KEY (order_id) REFERENCES retail_order(id),
FOREIGN KEY (employee_id)REFERENCES employee(id)
)Engine = InnoDB;

